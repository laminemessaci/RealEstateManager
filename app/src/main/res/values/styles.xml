<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2AA57A</item>
        <item name="colorPrimaryDark">#15616D</item>
        <item name="colorAccent">@color/colorGreen</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!-- TOOLBAR THEME -->
    <style name="ToolbarTheme" parent="AppTheme">
        <!-- Color of the title text in the Toolbar -->
        <item name="android:textColorPrimary">@color/colorGreen</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <!-- NAVIGATION DRAWER -->
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <!-- TOOLBAR THEME -->
    <style name="TextFieldTheme" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Color of the title text in the Toolbar -->
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>


</resources>